<div class="container">
    <div class="row justify-content-center g-0 gy-0 reset-margin">
        <div class="col-8">

            <div class="container-fluid details vertical-margin-3">
                <div class="row g-0 gy-0">

                    <h2>{{place.name}}</h2>

                    <label class="vertical-margin-2">Type:
                        <span class="status-details">{{place.type}}</span>
                    </label>

                    <label class="vertical-margin-2">Location:
                        {{#each place.location.coordinates}}
                        <span class="status-details">{{this}}</span>
                        {{/each}}
                    </label>

                    <div class="container-fluid col-12 vertical-margin-2">
                        <div class="row g-0 gy-0 justify-content-between">
                            <form action="/places/{{place.id}}/edit" method="GET" class="col-12 col-sm-6 col-md-4">
                                <button type="submit" class="btn btn-secondary full-width">Edit</button>
                            </form>

                            <form action="/places/{{place.id}}/delete" method="POST" class="col-12 col-sm-6 col-md-4">
                                <button type="submit" class="btn btn-warning full-width">Delete</button>
                            </form>

                        </div>
                    </div>

                    <a href="/places" class="vertical-margin-1">Go back</a>

                    {{#if errorMsg}}
                    <p class="errorMsg">{{errorMsg}}</p>
                    {{/if}}

                </div>
            </div>

        </div>
    </div>