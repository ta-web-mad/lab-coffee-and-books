<h1>create place</h1>

<form method="POST" action="/places/create-place">

  <div class="form-group">
    <label for="name">Nombre</label>
    <input name="name" type="text" class="form-control" id="name">
  </div>
  <div class="form-group">
    <label for="type">Tipo</label>

    <select class="custom-select" name="type" id="type">
      <option value="coffee shop">coffee shop</option>
      <option value="bookstore">bookstore</option>
    </select>
  </div>
  <div class="form-row">
    <div class="form-group">
      <label for="latitude">Latitud</label>
      <input name="latitude" type="text" class="form-control" id="latitude">
      <div class="form-group">
        <label for="longitude">Longitud</label>
        <input name="longitude" type="text" class="form-control" id="longitude">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-dark btn-block">Crear sitio</button>
</form>