<div class="container">
    <h1>El mapa tope de guapo </h1>
    <hr>
    <figure id="coffee-map"></figure>
    <section id="route">
        <div class="container listOfCoffee">
            {{#each response}}
            <h3>Nombre de la cafeteria: {{name}}</h3>
            <p>Tipo de tienda: {{type}} </p>
            <hr>
            {{/each}}
        </div>
    </section>

    <a href="/cafeterias/crear" class="btn btn-dark btn-block btn-lg">Nueva cafeteria</a>

    <div class="row">
        <div class="col-6">
        <form method="POST" action="/cafeterias/{{id}}/delete">
        
            <div class="form-group">
                <label for="id">Nombre</label>
                <input name="id" type="text" class="form-delete" id="id">
            </div>

            <button type="submit" class="btn btn-dark">Borrar Cafeteria</button>

            </form>

        </div>
        <div class="col-6">
            <form method="POST" action="/cafeterias/crear">
            
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
            
                <div class="form-group">
                    <label for="description">Descripci√≥n</label>
                    <input name="description" type="text" class="form-control" id="description">
                </div>
            
                <div class="form-group">
                    <label for="bestCoffee">Mejor Cafe/s</label>
                    <input name="bestCoffee" type="text" class="form-control" id="bestCoffee">
                </div>
            
                <div class="form-row">
            
                    <div class="col">
            
                        <div class="form-group">
                            <label for="latitude">Latitud</label>
                            <input name="latitude" type="text" class="form-control" id="latitude">
                        </div>
            
                    </div>
                    <div class="col">
            
                        <div class="form-group">
                            <label for="longitude">Longitud</label>
                            <input name="longitude" type="text" class="form-control" id="longitude">
                        </div>
                    </div>
                </div>
            
                <button type="submit" class="btn btn-dark btn-block">Crear restaurante</button>
            </form>
        </div>

    </div>
    


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/mapStyles.js"></script>
    <script src="/js/map-app.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=____API_____&callback=initMap"></script>
</div>