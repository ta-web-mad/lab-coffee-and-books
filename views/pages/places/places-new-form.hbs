<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Create new place</h1>

      <hr>

      <form action="/lugares/crear" method="POST">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          <input type="text" class="form-control" id="type" name="type">
        </div>

      <div class="form-row">
      
        <div class="col">
      
          <div class="form-group">
            <label for="latitude">Latitud</label>
            <input name="latitude" type="text" class="form-control" id="latitude">
          </div>
      
        </div>

        <div class="col">
      
          <div class="form-group">
            <label for="longitude">Longitud</label>
            <input name="longitude" type="text" class="form-control" id="longitude">
          </div>
          
        </div>

      </div>

        <button type="submit" class="btn btn-dark btn-block">Create new place</button>

      </form>

    </div>
  </div>
</div>