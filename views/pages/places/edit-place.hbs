<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Editar sitio</h1>

      <hr>

      <form method="POST" action="/places/edit/{{id}}">

        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name" value="{{name}}">
        </div>

        <div class="form-group">
          <label for="type">Tipo</label>
          <input name="type" type="text" class="form-control" id="type" value="{{type}}" placeholder="coffee shop / bookstore">
        </div>

        <div class="form-row">

          <div class="col">

            <div class="form-group">
              <label for="latitude">Latitud</label>
              <input name="latitude" type="text" class="form-control" id="latitude" value="{{latitude}}">
            </div>

          </div>
          <div class="col">

            <div class="form-group">
              <label for="longitude">Longitud</label>
              <input name="longitude" type="text" class="form-control" id="longitude" value="{{longitude}}">
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-dark btn-block">Editar sitio</button>
      </form>

    </div>
  </div>


</div>