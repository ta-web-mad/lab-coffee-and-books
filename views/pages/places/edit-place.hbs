<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Edit Place</h1>
      <hr>

      <form action="/students/edit/{{id}}" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="type">Type</label>
          <input type="text" class="form-control" id="pic" name="type" value="{{type}}">
        </div>
        <div class="form-group">
          <label for="latitude">Latitude</label>
          <input type="text" class="form-control" id="desc" name="latitude" value="{{location.coordinates.[0]}}">
        </div>
        <div class="form-group">
          <label for="longitude">Longitude</label>
          <input type="text" class="form-control" id="role" name="longitude" value="{{location.coordinates.[1]}}">
        </div>

        <button type="submit" class="btn btn-dark btn-block">Save and Exit</button>
      </form>

    </div>
  </div>
</div>