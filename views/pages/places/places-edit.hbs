<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Edit place</h1>

      <hr>

      <form method="POST" action="/places/edit/{{id}}">

        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" id="name" value='{{name}}'>
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          <input name="type" type="text" class="form-control" id="type" value='{{type}}'>
        </div>

        <div class="form-row">

          <div class="col">

            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" class="form-control" id="latitude"
                value='{{location.coordinates.[0]}}'>
            </div>

          </div>
          <div class="col">

            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" class="form-control" id="longitude"
                value='{{location.coordinates.[1]}}'>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-dark btn-block">Edit place</button>
      </form>

    </div>
  </div>


</div>