<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit the place {{name}}</h1>

            <hr>
            {{#with place}}
            <form method="POST" action="/edit/{{id}}">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="type">Type</label>
                    <select class="form-control" id="type" name="type" value="{{type}}">
                        {{#select type}}
                        <option value="coffee shop">Coffee shop</option>
                        <option value="bookstore">Bookstore</option>
                        {{/select}}
                    </select>
                </div>

                <div class="form-row">

                    <div class="col">

                        <div class="form-group">
                            <label for="latitude">Latitude</label>
                            <input name="latitude" type="text" class="form-control" id="latitude"
                                value="{{location.coordinates.[0]}}">
                        </div>

                    </div>
                    <div class="col">

                        <div class="form-group">
                            <label for="longitude">Longitude</label>
                            <input name="longitude" type="text" class="form-control" id="longitude"
                                value="{{location.coordinates.[1]}}">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-dark btn-block">Edit the place</button>
            </form>
            {{/with}}

        </div>
    </div>


</div>